  "main": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "npx nodemon --exec node --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down -v",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev --name 'init'",
    "db:seed": "node src/prisma/seed.js",
    "db:init": "sh -c \"./init.sh\"",
    "db:start": "docker exec -it ecommerce-backend npm run db:init"
  },
